<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#428284"
            android:text="Thông Tin Cá Nhân"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:text="Họ tên: "
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edthoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:text="CMND: "
                android:textColor="#000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtcmnd"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#0082FF"
            android:text="Bằng cấp"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radbangcap">

                <RadioButton
                    android:id="@+id/radtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung cấp"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radcd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Cao Đẳng"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/raddh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Đại học"
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#0082FF"
            android:text="Sở thích"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/ckbdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc báo"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/ckbds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Đọc sách"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/ckbdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đọc coding"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#0082FF"
            android:text="Thông tin bổ sung"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtttbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine" />
        </LinearLayout>

        <Button
            android:id="@+id/btngui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gửi thông tin"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>


</ScrollView>